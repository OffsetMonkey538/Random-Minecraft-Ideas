{
  "schemaVersion": 1,
  "id": "villagerdrops",
  "version": "${version}",
  "name": "Villager Drops",
  "description": "Makes villagers drop their inventory when killed.",
  "authors": [
    "OffsetMonkey538"
  ],
  "contact": {
    "sources": "https://github.com/OffsetMonkey538/Random-Minecraft-Ideas",
    "issues": "https://github.com/OffsetMonkey538/Random-Minecraft-Ideas/issues"
  },
  "license": "MIT",
  "icon": "assets/villagerdrops/icon.png",
  "environment": "*",
  "mixins": [
    "villagerdrops.mixins.json"
  ],
  "depends": {
    "fabricloader": "*",
    "minecraft": "*"
  },
  "custom": {
    "modmenu": {
      "links": {
        "modmenu.discord": "${discord_invite}"
      },
      "parent": {
        "id": "${root_id}",
        "name": "${root_name}",
        "description": "${root_description}",
        "icon": "${root_icon}"
      }
    }
  }
}
